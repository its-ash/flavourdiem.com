{
  "name": "flavourdiem.com",
  "version": "1.0.0",
  "description": "Flavourdiem website with Vite setup",
  "scripts": {
    "ejs": "node scripts/build-docs.mjs",
    "dev": "npm run ejs && concurrently -k \"npm:watch:ejs\" \"vite docs\"",
    "watch:ejs": "nodemon --watch . --watch components --ext ejs,html --ignore docs --ignore node_modules --exec \"npm run ejs\"",
    "build": "node scripts/build-docs.mjs",
    "preview": "vite preview docs"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "ejs": "^4.0.1",
    "ejs-cli": "^2.2.3",
    "nodemon": "^3.1.14",
    "vite": "^7.3.1",
    "vite-plugin-static": "^0.0.3"
  }
}
